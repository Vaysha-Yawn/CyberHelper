<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size android:width="70dp" android:height="40dp"/>
            <solid android:color="@color/green" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="@color/dark"/>
        </shape>
    </item>
    <item android:drawable="@drawable/font"
        android:width="25dp" android:height="25dp"
        android:gravity="left|center_vertical"
        android:left="10dp">
    </item>
    <item android:drawable="@drawable/ic_plus_circle"
        android:width="20dp" android:height="20dp"
        android:gravity="right|center_vertical"
        android:right="8dp">
    </item>
</layer-list>
