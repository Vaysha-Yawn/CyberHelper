<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Text" >
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/jura</item>
    </style>
    <style name="Text.H2">
        <item name="fontWeight">1500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Text.H1">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="Text.yellow_spinner" >
        <item name="fontWeight">1500</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#F5F000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="Text.Title">
        <item name="fontWeight" >1500</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>
    <style name="Text.Title.Medium">
        <item name="android:drawableLeft">@drawable/line_grey_medium</item>
        <item name="android:drawableRight">@drawable/line_grey_medium</item>
    </style>
    <style name="Text.Title.Small">
        <item name="android:drawableLeft">@drawable/line_grey_small</item>
        <item name="android:drawableRight">@drawable/line_grey_small</item>
    </style>

    <style name="Button_plus_green">
        <item name="android:fontFamily">@font/jura</item>
        <item name="fontWeight" >1500</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@drawable/btn_dark_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableRight">@drawable/btn_green_plus</item>
        <item name="android:paddingEnd">30dp</item>
    </style>

    <style name="Button_green_full">
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:background">@drawable/btn_green_full</item>
        <item name="fontWeight" >1500</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button_green_outline">
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:background">@drawable/btn_green_outline</item>
        <item name="fontWeight" >1500</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="Button_grey">
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:background">@drawable/bcg_rectangle_round</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="fontWeight">1500</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Button_green_next">
        <item name="android:fontFamily">@font/jura</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bcg_rectangle_round</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">20dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>