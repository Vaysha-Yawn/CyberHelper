<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292833"
    tools:context=".activity_and_fragments.Edit_string"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/dark"
        android:padding="20dp">

    <TextView
        android:id="@+id/key"
        style="@style/Text.Title.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ключ" />

    <EditText
        android:id="@+id/edit_string"
        style="@style/Text.H2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/green"
        android:hint="Введите значение"
        android:layout_marginHorizontal="20dp"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/close"
            style="@style/Text.H2"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green_outline"
            android:text="Отмена"
            android:textAllCaps="false"
            android:textColor="@color/green" />

        <Space
            android:id="@+id/space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minWidth="30dp"/>

        <Button
            android:id="@+id/apply"
            style="@style/Text.H2"
            android:layout_width="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_green_full"
            android:text="Сохранить"
            android:textAllCaps="false"
            android:textColor="@color/black" />
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

