<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1A22"
    tools:context=".load.presentaion.LoadGame"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="57dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#050414">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="#050414"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:srcCompat="@drawable/back"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/CyberHelper"
                style="@style/Text.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cyber Helper" />

        </FrameLayout>

        <TextView
            android:id="@+id/loadGame_TextLoadGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Загрузка игры"
            style="@style/Text.H2"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <GridView
            android:id="@+id/loadGame_GridView"
            android:layout_width="match_parent"
            android:layout_height="417dp"
            android:layout_margin="20dp"
            android:horizontalSpacing="20dp"
            android:numColumns="2"
            android:verticalSpacing="20dp" />

        <Button
            android:id="@+id/loadGame_LoadFromFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Загрузить сохранение из файла"
            android:textAllCaps="false"
            android:layout_gravity="center"
            style="@style/Text"
            android:textColor="@color/cyan"
            android:background="@drawable/btn_bcg_dark_blue"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>