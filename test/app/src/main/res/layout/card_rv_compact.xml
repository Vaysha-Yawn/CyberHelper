<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp">

    <Button
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/delete"
        tools:ignore="SpeakableTextPresentCheck" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/PMLinear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <com.example.test.views.PlusMinusView
                android:id="@+id/PM"
                android:layout_gravity="center"
                android:layout_width="200dp"
                app:PM_color="@color/green"
                app:PM_small="false"
                android:layout_height="wrap_content"/>
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.example.test.views.DropDownView
            android:id="@+id/DD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:main_text="Выберите модификатор"
            app:DD_color="@color/green"
            app:text_color="@color/black"/>

        <EditText
            android:hint="подсказка"
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            tools:ignore="TouchTargetSizeCheck" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/string_editable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_grey_circle">

            <TextView
                android:id="@+id/string_editable_text"
                style="@style/Text.H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:text="Эмгыр Вар Эмрейс Эмгыр Вар Эмрейс Эмгыр Вар Эмрейс Эмгыр Вар Эмрейс Эмгыр Вар Эмрейс"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/string_editable_edit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/string_editable_edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>