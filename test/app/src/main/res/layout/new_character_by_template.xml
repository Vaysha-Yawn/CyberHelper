<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1A22"
    tools:context=".activity_and_fragments.new_character.NewCharacterByTemplate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#050414">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="#050414"
                android:minWidth="48dp"
                android:minHeight="48dp"
                app:srcCompat="@drawable/back"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/CyberHelper"
                style="@style/Text.H2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cyber Helper" />

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Имя персонажа" />

                <EditText
                    android:id="@+id/newByTemplate_EditNameCharacter"
                    style="@style/Text.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:hint="Имя персонажа"
                    android:inputType="text"
                    android:maxLength="30"
                    android:minHeight="48dp"
                    android:textColorHint="#626262" />

                <TextView
                    style="@style/Text.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Пол"
                    android:textColor="#626262"/>

                <Switch
                    android:id="@+id/newByTemplate_EditGender"
                    style="@style/Text.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:text="Мужской "
                    tools:ignore="UseSwitchCompatOrMaterialXml"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <TextView
                    style="@style/Text.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Возраст"
                    android:textColor="#626262"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/newByTemplate_minus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/btn_green_minus"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/background_black">

                        <EditText
                            android:id="@+id/newByTemplate_EditAge"
                            style="@style/Text.H2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/green"
                            android:inputType="number"
                            android:minWidth="48dp"
                            android:minHeight="48dp"
                            android:text="20"
                            android:maxLength="4"
                            tools:ignore="SpeakableTextPresentCheck" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/newByTemplate_plus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_green_plus"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <Button
                    android:id="@+id/newByTemplate_Done"
                    style="@style/Text.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="#00FC92"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Готово"
                    android:textColor="@color/black" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>