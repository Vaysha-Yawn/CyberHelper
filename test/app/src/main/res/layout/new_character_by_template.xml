<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1A22"
    tools:context=".new_character.NewCharacterByTemplate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.test.components.views.HeaderView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Имя персонажа"
                    android:textColor="@color/green" />

                <EditText
                    android:id="@+id/newByTemplate_EditNameCharacter"
                    style="@style/Text.H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bcg_rectangle_round"
                    android:backgroundTint="@color/dark_grey"
                    android:hint="Имя персонажа"
                    android:inputType="text"
                    android:maxLength="30"
                    android:minHeight="48dp"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="10dp"
                    android:textColorHint="@color/light_grey" />
                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/Text.H2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Пол"
                            android:textColor="@color/green" />

                        <Switch
                            android:id="@+id/newByTemplate_EditGender"
                            style="@style/Text.H2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:minHeight="48dp"
                            android:text="Мужской "
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </LinearLayout>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            style="@style/Text.H2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Возраст"
                            android:textColor="@color/green" />

                        <com.example.test.components.views.PlusMinusView
                            android:id="@+id/PM"
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            app:PM_small="true" />

                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:id="@+id/newByTemplate_Done"
                    style="@style/Text.H2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bcg_rectangle_round"
                    android:backgroundTint="@color/green"
                    android:paddingHorizontal="50dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Готово"
                    android:textAllCaps="false"
                    android:textColor="@color/black" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>