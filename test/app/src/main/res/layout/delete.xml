<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_and_fragments.Delete"
    android:background="#292833">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1B1A22"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/key"
            style="@style/Text.Title.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Удаление" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/description"
            style="@style/Text.H2"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Вы уверены, что хотите удалить что-то там?" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/close"
                style="@style/Text.H2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green_full"
                android:text="Отмена"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="20dp"/>

            <Button
                android:id="@+id/delete"
                style="@style/Text.H2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green_outline"
                android:text="Удалить"
                android:textAllCaps="false"
                android:textColor="@color/green" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>