<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">

    <com.example.test.components.views.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="8"
        android:progress="3"
        android:progressTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/Text.H1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:text="Группы характеристик"
                />
            <TextView
                android:id="@+id/title2"
                style="@style/Text.H2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="40dp"
                android:gravity="start"
                android:text="Опишите группы характеристик для персонажа по разделам"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <com.example.test.components.views.CompactViewString
                android:id="@+id/CV1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:CV_String_add_text="Добавить группу"
                app:CV_String_item_hint="Название характеристики"
                app:CV_String_title="1 Инфo"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                />
            <com.example.test.components.views.CompactViewString
                android:id="@+id/CV2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:CV_String_add_text="Добавить группу"
                app:CV_String_item_hint="Название характеристики"
                app:CV_String_title="2 Параметры"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                />
            <com.example.test.components.views.CompactViewString
                android:id="@+id/CV3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:CV_String_add_text="Добавить группу"
                app:CV_String_item_hint="Название характеристики"
                app:CV_String_title="3 Броня и оружие"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                />
            <com.example.test.components.views.CompactViewString
                android:id="@+id/CV4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:CV_String_add_text="Добавить группу"
                app:CV_String_item_hint="Название характеристики"
                app:CV_String_title="4 Рюкзак"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                />
            <com.example.test.components.views.CompactViewString
                android:id="@+id/CV5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:CV_String_add_text="Добавить группу"
                app:CV_String_item_hint="Название характеристики"
                app:CV_String_title="5 Биография"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                />
            <Button
                android:id="@+id/next"
                style="@style/Button_green_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="30dp"
                android:text="Далее"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>